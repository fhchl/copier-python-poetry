"""{{package_name}} CLI."""
import os

import click

from {{package_name}} import __version__, logs
from {{package_name}}.{{package_name}} import a_function


@click.command()
@click.version_option(__version__)
@click.option(
    "-v",
    "--verbosity",
    type=click.Choice(["ERROR", "WARNING", "INFO", "DEBUG"]),
    default=os.getenv("VERBOSITY", "INFO"),
    help="Set log verbosity level [default: .env:VERBOSITY or INFO]",
)
def cli(verbosity):
    """Engage with {{package_name}} using this cli."""
    logs.set_level(verbosity)
    print(a_function())
